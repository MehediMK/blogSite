<%- include('./layout/header') %>
<%- include('./layout/navbar') %>
<!-- body start -->

<div class="container">
    <div class="row py-4">
        <div class="col-6 offset-3 d-flex justify-content-evenly">
            <a class="btn btn-success" href="/post" >Add Post</a>
            <a class="btn btn-warning" href="/category" >Add category</a>
        </div>
    </div>

    <!-- display posts -->
    <div class="row my-2 py-2 px-4">
        <!--  .testimonial-group for horizontaly scroll -->
        <h3 class="text-center">Post List</h3><hr>

        <% if(posts){
            if(posts.length>6){
                for(var i = 0; i< posts.length; i++) {%>
                    <!-- post item  -->
                    <div class="col-xl-2 col-md-2 col-sm-4 col-6 p-1 ">
                        <div class="card w-100 h-100 rounded">
                            <img class="w-100 h-100" src="<%= posts[i].image%>" alt="category item">
                            <p class="text-center"> <a href="<%= posts[i].slug%>"><%= posts[i].title%></a> </p>
                        </div>
                    </div>
                    <!-- post item  -->
                <% }
            } 
            else{
                for(var i = 0; i< posts.length; i++) {%>
                    <!-- post item  -->
                    <div class="col-xl-2 col-md-2 col-sm-4 col-6 p-1 ">
                        <div class="card w-100 h-100 rounded">
                            <img class="w-100 h-100" src="<%= posts[i].image%>" alt="category item">
                            <p class="text-center"> <a href="<%= posts[i].slug%>"><%= posts[i].title%></a> </p>
                        </div>
                    </div>
                    <!-- post item  -->
                <% }
            } 
        }else{ %>
            <option class="text-uppercase">No Category Found</option>
        <% } %>


        <a href="/admin/allpost" class="d-block text-end ">See all</a>
    </div>
    <!-- display posts -->


    <!-- display categories -->
    <div class="row my-2 py-2 px-4">
        <!--  .testimonial-group for horizontaly scroll -->
        <h3 class="text-center">Category List</h3><hr>
        

        <% if(category){
                if(category.length>6){
                    for(var i = 0; i< category.length; i++) {%>
                        <!-- category item  -->
                        <div class="col-xl-2 col-md-2 col-sm-4 col-6 p-1 ">
                            <div class="card w-100 h-100 rounded">
                                <img class="w-100 h-100" src="<%= category[i].image%>" alt="category item">
                                <p class="text-center"><%= category[i].title%></p>
                            </div>
                        </div>
                        <!-- category item  -->
                    <% }
                } 
                else{
                    for(var i = 0; i< category.length; i++) {%>
                        <!-- category item  -->
                        <div class="col-xl-2 col-md-2 col-sm-4 col-6 p-1 ">
                            <div class="card w-100 h-100 rounded">
                                <img class="w-100 h-100" src="<%= category[i].image%>" alt="category item">
                                <p class="text-center"> <a href="<%= category[i].slug%>"><%= category[i].title%></a> </p>
                            </div>
                        </div>
                        <!-- category item  -->
                    <% }
                } 
            }else{ %>
                <option class="text-uppercase">No Category Found</option>
            <% } %>

        
        <a href="/admin/allcategory" class="d-block text-end ">See all</a>
    </div>
    <!-- display categories -->

</div>

<!-- body end -->
<%- include('./layout/topfooter') %>
<%- include('./layout/footer') %>
